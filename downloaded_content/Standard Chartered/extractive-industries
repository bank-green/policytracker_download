<script id='sc_onetrust-js-after'>
function OptanonWrapper() {
	var otc = unescape(getCookie("OptanonConsent"));
	update_ad_storage = otc.indexOf('C0004:1') < 0 ? 'denied' : 'granted';
	update_analytics_storage = otc.indexOf('C0002:1') < 0 ? 'denied' : 'granted';
	if((window.analytics_storage != update_analytics_storage) || (window.ad_storage
	!= update_ad_storage)){
		if (window.analytics_storage != update_analytics_storage) {
			gtag('consent', 'update', {'analytics_storage': update_analytics_storage});
			window.analytics_storage = update_analytics_storage;
		}
		if (window.ad_storage != update_ad_storage) {
			gtag('consent', 'update', {'ad_storage': update_ad_storage});
			window.ad_storage = update_ad_storage;
		}
		window.dataLayer.push( { event: 'consent_updated' } );
	}

	/**
	 * Use OneTrust consent to conditionally include libraries
	 **/
	if ( document.body.classList.contains( 'with-addthis-sharing' ) ) {
		window.OneTrust.InsertScript( 'https://s7.addthis.com/js/300/addthis_widget.js#pubid=ra-580621cd63778d87', 'body', null, null, '3' );
	}

	if ( document.body.classList.contains( 'with-gated' ) ) {
		window.OneTrust.InsertScript( '/content/themes/standardchartered/js/vendor/gated.js?v=20201103', 'body', null, null, '3' );
	}
	if ( document.body.classList.contains( 'single-post' ) || document.body.classList.contains( 'single-sc_features' ) ) {
		window.OneTrust.InsertScript('https://cdn.ampproject.org/v0/amp-analytics-0.1.js', 'body', null, null, '4');
	}
}
</script>
